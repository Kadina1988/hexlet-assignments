<%= form_with model: @task do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name%>
    <hr>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description%>
    <hr>
  </div>

  <div>
    <%= f.label :status %>
    <%= f.text_field :status %>
    <hr>
  </div>

  <div>
    <%= f.label :creator %>
    <%= f.text_field :creator %>
    <hr>
  </div>

  <div>
    <%= f.label :performer %>
    <%= f.text_field :performer %>
    <hr>
  </div>

  <div>
    <%= f.label :completed, 'completed' %>
    <%= f.check_box :completed %>
    <hr>
  </div>

  <div><%= f.submit %></div>
<% end %>
